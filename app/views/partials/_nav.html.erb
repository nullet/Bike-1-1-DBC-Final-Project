<header class="navigation">
  <div class="menu-wrapper">
    <a href="/" class="logo">
      <%= link_to image_tag("/assets/logo.png"), root_path, class:"logo" %>
    </a>
    <p class="navigation-menu-button" id="js-mobile-menu">MENU</p>
    <div class="nav">
      <ul id="navigation-menu">
        <% if current_user %>
          <li class="nav-link"><%= link_to 'Profile', user_path(current_user.id) %></li>
          <li class="nav-link"><%= link_to 'Map', dashboard_path %></li>
          <li class="nav-link"><%= link_to 'New Request', new_event_path %></li>
          <li class="nav-link"><%= link_to 'Karma Leaderboard', karma_path %></li>
        <% else %>
          <li class="nav-link"><%= link_to 'Bike-1-1', root_path %></li>
        <% end %>
      </ul>
    </div>
    <div class="navigation-tools nav-bar-buttons">
      <% if current_user %>
        <span id="nav-grav"><%= image_tag gravatar_url(current_user) %></span>
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-tool' %>
      <% else %>
          <%= link_to 'Sign up!', new_user_registration_path, class: 'nav-tool' %>
          <%= link_to 'Sign in', new_user_session_path, class: 'nav-tool' %>
      <% end %>
    </div>
  </div>
</header>